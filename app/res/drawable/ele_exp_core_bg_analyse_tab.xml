<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--按钮边框颜色-->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/navigation_title_first_color"/>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <!--按钮未选中的背景颜色-->
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/navigation_title_first_pressed_color"/>
        </shape>
    </item>
</layer-list>
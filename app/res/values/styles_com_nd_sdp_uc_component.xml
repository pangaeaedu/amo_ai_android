<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="skin_uc_component_login_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
    </style>

    <style name="skin_uc_component_transparent" parent="@style/CommonBase.Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/skin_uc_component_transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="uc_component_transparent" parent="@style/CommonBase.Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- 迁移使用的toolbar -->
    <style name="skin_uc_component_migrate_toolbar">
        <item name="android:layout_height">@dimen/common_toolbar_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="navigationIcon">@drawable/skin_uc_component_btn_back_white_selector</item>
    </style>

    <!-- 迁移使用的etditext样式 -->
    <style name="skin_uc_component_migrate_etditext">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/skin_uc_component_migrate_hint</item>
        <item name="android:textCursorDrawable">@color/skin_uc_component_migrate_red</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/uc_text_size_large</item>
    </style>

    <!-- 迁移使用的textview样式 -->
    <style name="skin_uc_component_migrate_gray_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/uc_text_size_large</item>
        <item name="android:textColor">@color/skin_uc_component_migrate_gray</item>
    </style>

</resources>
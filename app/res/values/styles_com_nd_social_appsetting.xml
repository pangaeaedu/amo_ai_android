<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Setting.Transparent.Activity" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Setting.Style.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/setting_loading_circle</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">1500</item>
    </style>

    <!-- 设置项 文字样式（旧版本）-->
    <style name="setting_preference_item_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#3a3f43</item>
        <item name="android:layout_marginLeft">@dimen/setting_item_view_padding_left</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/setting_item_view_padding_left</item>
    </style>

    <!--设置分组标题 样式-->
    <style name="settings_group_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#878787</item>
        <item name="android:layout_marginLeft">@dimen/setting_item_view_padding_left</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/setting_item_view_padding_left</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="setting_title_text_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textDirection" tools:ignore="NewApi">locale</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="setting_title_text" parent="setting_title_text_base">
        <item name="android:textColor" tools:ignore="PrivateResource">@color/setting_item_title_textcolor</item>
        <item name="android:textSize">?font_medium</item>
    </style>
    <style name="setting_subtitle_text" parent="setting_title_text_base">
        <item name="android:textColor" tools:ignore="PrivateResource">@color/color4</item>
        <item name="android:textSize">?font_small</item>
    </style>
    <style name="setting_secondary_text" parent="setting_subtitle_text">
        <item name="android:textSize">?font_xsmall</item>
    </style>

    <!-- 设置项 文字样式-->
    <style name="setting_about_item_text">
        <item name="android:textSize">?font_medium</item>
        <item name="android:textColor">@color/setting_about_item_textColor</item>
    </style>



</resources>